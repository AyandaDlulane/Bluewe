{
  "manifest_version": 3,
  "name": "Code Security Inspector",
  "version": "1.0.0",
  "description": "Analyzes website code for validity and suspicious activity",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["context.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Scan Website Code"
  }
}